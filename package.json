{
  "name": "react-component-boilerplate",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Pedro Palhari",
    "email": "pedro@palhari.dev"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "component-library": "link:./dist",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^0.2.4"
  },
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "scripts": {
    "build": "rimraf dist-dev && microbundle --no-compress --format modern,cjs -o dist-dev/index.js",
    "start": "rimraf dist-dev && microbundle watch --no-compress --format modern,cjs -o dist-dev/index.js",
    "build:prod": "rimraf dist && microbundle watch --no-compress --format modern,cjs",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "microbundle": "0.13",
    "rimraf": "^3.0.2"
  }
}
